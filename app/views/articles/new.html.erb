<h1>New article</h1>
<%= form_for(@article) do |f|%>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control text-center' %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control text-center' %>
  </div>
  <%= f.submit class: 'btn btn-success', id: 'btn'%>
<% end %>
<%= link_to "Back to list", articles_path %>

